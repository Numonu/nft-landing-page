---
import Link from "../components/Link.astro";
const items = ["Collection", "Market Place", "Community", "Contact"];
---

<header class="py-4 font-light">
	<div class="flex justify-between items-center">
		<h2 class="text-2xl">Numonu</h2>
		<ul class="overflow-hidden flex items-center gap-12 text-xl">
			{
				items.map((e) => {
					return (
						<li>
							<a
								class="text-neutral-400 hover:text-neutral-50"
								href="#"
							>
								{e}
							</a>
						</li>
					);
				})
			}
			<li>
				<Link>
					<button
						class="border-neutral-50 text-neutral-50 px-4 py-2 border-2 rounded-full hover:bg-neutral-50 hover:text-zinc-900 transition-colors"
					>
						Connect Wallet
					</button>
				</Link>
			</li>
		</ul>
	</div>
</header>
